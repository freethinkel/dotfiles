#SKHD STUFF

ctrl + alt + cmd - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
ctrl + alt + cmd - s : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.skhd"

ctrl + alt - h : yabai -m window --focus west
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - l : yabai -m window --focus east

## open terminal
ctrl + alt - return : /Applications/iTerm.app/Contents/MacOS/iTerm2

## swap window
ctrl + alt - y : yabai -m window --swap west
ctrl + alt - 0x21 : yabai -m window --swap east # 0x21 is the "[" key

## increase window size
ctrl + shift - h : yabai -m window --resize left:-20:0
ctrl + shift - j : yabai -m window --resize bottom:0:20
ctrl + shift - k : yabai -m window --resize top:0:-20
ctrl + shift - l : yabai -m window --resize right:20:0

## decrease window size
#shift + cmd - a : yabai -m window --resize left:20:0
#shift + cmd - s : yabai -m window --resize bottom:0:-20
#shift + cmd - w : yabai -m window --resize top:0:20
#shift + cmd - d : yabai -m window --resize right:-20:0

## rotate tree 90
ctrl + alt - r : yabai -m space --rotate 90

## flip the tree vertically
ctrl + alt - 4 : yabai -m space --mirror y-axis

## toggle window fullscreen zoom
ctrl + alt - f : yabai -m window --toggle zoom-fullscreen
