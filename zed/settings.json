{
  "ssh_connections": [
    {
      "host": "kolesnikov.thv04.voiso.dev",
      "username": "app",
      "port": 1355,
      "projects": [
        {
          "paths": ["~/web"]
        }
      ]
    }
  ],
  "language_models": {
    "openai": {
      "version": "1"
    }
  },
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4"
    },
    "version": "2",
    "default_open_ai_model": "gpt-4o",
    "provider": null
  },
  "preview_tabs": {
    "enable_preview_from_code_navigation": true
  },
  "completion_documentation_secondary_query_debounce": 500,
  "enable_language_server": true,
  "vim_mode": true,
  "show_completions_on_input": true,
  // "buffer_font_family": "FiraCode Nerd Font",
  "buffer_font_fallbacks": ["FiraCode Nerd Font"],
  "buffer_font_family": "FiraCode Nerd Font",
  "ui_font_family": "FiraCode Nerd Font",
  "default_dock_anchor": "bottom",
  "buffer_font_size": 13,
  // "ui_font_family": "Zed Sans",
  "buffer_line_height": {
    "custom": 2
  },
  "tab_size": 2,
  "vim": {
    "use_system_clipboard": "always"
  },
  "theme": {
    "dark": "Snowfall dark",
    "light": "Ayu Light",
    "mode": "system"
  },

  "format_on_save": "on",
  "auto_update": true,
  "inlay_hints": {
    "enabled": false
  },
  "terminal": {
    "env": {
      "GIT_EDITOR": "zed --wait"
    }
  },
  "lsp": {
    "biome": {
      "root": "package.json",
      "enabled": false,
      "filetypes": ["typescript"]
    }
  },
  "languages": {
    "Rust": {
      "formatter": "language_server"
    },
    "CSS": {
      "formatter": "prettier"
    },
    "Prisma": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Dart": {
      "formatter": "language_server",
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Svelte": {
      "format_on_save": "on",
      "formatter": "language_server"
      // "formatter": "prettier"
    },
    "JavaScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "formatter": "prettier",
      // "language_servers": ["!typescript-language-server", "vtsls", "eslint"],
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "formatter": "prettier",
      // "language_servers": ["!typescript-language-server", "vtsls", "eslint"],
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "relative_line_numbers": true,
  "show_whitespaces": "selection",
  "formatter": "prettier",
  "file_types": {
    "CSS": ["pcss"]
  },
  "performance": {
    "show_in_status_bar": true
  }
}
