{
  "icon_theme": "Zed (Default)",
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "version": "2"
  },
  "ssh_connections": [
    {
      "host": "kolesnikov.thv04.voiso.dev",
      "username": "app",
      "port": 1355,
      "projects": [
        {
          "paths": ["~/web"]
        }
      ]
    }
  ],
  "preview_tabs": {
    "enable_preview_from_code_navigation": true
  },
  "git_panel": {
    "enable": true
  },
  "diagnostics": {
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 5
    }
  },
  "enable_language_server": true,
  "vim_mode": true,
  "buffer_font_fallbacks": ["FiraCode Nerd Font"],
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 16,
  "buffer_font_size": 13,
  "buffer_line_height": {
    "custom": 1.6
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "tab_size": 2,
  "vim": {
    "use_system_clipboard": "always"
  },
  "theme": {
    "dark": "Snowfall dark",
    "light": "Ayu Light",
    "mode": "system"
  },
  "format_on_save": "on",
  "auto_update": true,
  "inlay_hints": {
    "enabled": false
  },
  "terminal": {
    "env": {
      "GIT_EDITOR": "zed --preview --wait"
    }
  },
  "lsp": {
    "deno": {
      "root": "deno.json",
      "filetypes": ["typescript"]
    },
    "biome": {
      "root": "package.json",
      "enabled": false,
      "filetypes": ["typescript"]
    }
  },
  "languages": {
    "Rust": {
      "formatter": "language_server"
    },
    "CSS": {
      "formatter": "prettier"
    },
    "Prisma": {
      "formatter": "language_server",
      "format_on_save": "on"
    },
    "Dart": {
      "formatter": "language_server",
      "language_servers": ["dart", "cspell"],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Svelte": {
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "JavaScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TSX": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "relative_line_numbers": true,
  "show_whitespaces": "selection",
  "formatter": "auto",
  "file_types": {
    "CSS": ["pcss"]
  },
  "prettier": {
    "allowed": true
  }
}
